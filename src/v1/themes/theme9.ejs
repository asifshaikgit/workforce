<html>

<head>
    <style>
        body {
            font-size: 10pt;
            padding: 10px
        }

        p {
            margin: 0pt;
        }

        table.items {
            border: 0.1mm solid #e7e7e7;
        }

        td {
            vertical-align: top;
        }

        thead {
            text-align: center;
            padding: 6px 2px;
            color: #F7F7FA;
            background-color: #2A3042;
        }


        .items td {
            border-left: 0.1mm solid #e7e7e7;
            border-right: 0.1mm solid #e7e7e7;
        }

        table thead td {
            text-align: center;
            border: 0.1mm solid #e7e7e7;
        }

        .items td.blanktotal {
            background-color: #EEEEEE;
            border: 0.1mm solid #e7e7e7;
            background-color: #FFFFFF;
            border: 0mm none #e7e7e7;
            border-top: 0.1mm solid #e7e7e7;
            border-right: 0.1mm solid #e7e7e7;
        }

        .items td.totals {
            text-align: right;
            border: 0.1mm solid #e7e7e7;
        }

        .items td.cost {
            text-align: "." center;
        }
    </style>
</head>

<body>
    <table width="100%" cellpadding="10">
        <tr>
            <td> <img src="<%=invoice_data.logo%>" alt="watermark" style="width: 75px;"></td>

            <td width="100%" style="text-align: right; padding: 10px;">
                <div> <strong style="text-align: right; font-size: 20px; font-weight: bold">Invoice</strong>
                    <p>
                        # <%=invoice_data.invoice_no%>
                    </p>
            </td>
        </tr>
        <tr>
            <td  colspan="2">
                <div>
                    <strong>
                        <%=invoice_data.organization_name%>
                    </strong>
                    <p style="padding-top: 10px">
                        <%=invoice_data.office_address%>
                    </p>
                    <p>
                        <%=invoice_data.office_address_cities%>
                    </p>
                </div>
            </td>
        </tr>
    </table>
    <table width="100%" cellpadding="10">
        <tr>
            <td><strong>Bill From</strong></td>
        </tr>
        <tr>
            <td>
                <p style="color: blue"><strong>
                        <%=invoice_data.name%>
                    </strong></p>
                <p style="padding-top: 5px">
                    <%=invoice_data.client_address%>
                </P>
                <p style="padding-bottom: 5px;">
                    <%=invoice_data.client_address_cities%>
                </p>
            </td>
            <td style="text-align: right; padding: 10px;">
                <div>
                    <p style="padding: 5px;">Invoice Date : <%=invoice_data.invoice_date%>
                    </p>
                    <p style="padding: 5px;">Due Date : <%=invoice_data.due_date%>
                    </p>
                    <p style="padding: 5px;">Terms : <%=invoice_data.terms%>
                    </p>
                </div>
            </td>
        </tr>
    </table>
    <br>
    <table class="items" width="100%" style="font-size: 14px; border-collapse: collapse;" cellpadding="8">
        <thead>
            <tr>
                <td width="15%" style="text-align: left;"><strong>S.NO</strong></td>
                <td width="45%" style="text-align: left;"><strong>Service Name</strong></td>
                <td width="20%" style="text-align: left;"><strong>Hours</strong></td>
                <td width="20%" style="text-align: left;"><strong>Rate</strong></td>
                <td width="20%" style="text-align: left;"><strong>Amount</strong></td>
            </tr>
        </thead>
        <tbody>
            <!-- ITEMS HERE -->
            <% if (invoice_data.body_data.length> 0) { %>
                <% invoice_data.body_data.forEach(data=> {%>
                    <tr>
                        <td style="padding:  7px; line-height: 20px;">
                            <%= data.serial_no %>
                        </td>
                        <td style="padding:  7px; line-height: 20px;">
                            <%= data.service_name %>
                        </td>
                        <td style="padding:  7px; line-height: 20px;">
                            <%= data.hours %>
                        </td>
                        <td style="padding:  7px; line-height: 20px;">
                            <%= data.rate %>
                        </td>
                        <td style="padding: 7px; line-height: 20px;">
                            <%= data.amount %>
                        </td>
                    </tr>
                    <% });%>
                        <% }%>
                            <style>
                                .items tbody tr:not(:last-child) {
                                    border-bottom: 1px solid #000;
                                    /* You can adjust the color and style of the line as needed */
                                }
                            </style>
        </tbody>

    </table>
    <br>
    <table width="100%" style="font-size: 14px;">
        <tr>
            <td></td>
            <td style=" text-align: right; line-height: 20px;">Sub Amount : $ <%=invoice_data.sub_total%>
            </td>

        </tr>
        <tr>
            <td></td>
            <td style="text-align: right; line-height: 20px;">Total Amount : $ <%=invoice_data.total%>
            </td>

        </tr>
         <tr>
            <td></td>
            <td style="text-align: right; line-height: 20px;">Balance Due : $ <%=invoice_data.balance_due%>
            </td>

        </tr>
        <tr>
            <td></td>
            <td  style="text-align: right; line-height: 20px;"><%=invoice_data.amount_in_words%>
            </td>

        </tr>
    </table>
    <br>
    <table width="100%" style="font-family: sans-serif; font-size: 14px;">
        <br>
        <tr>
            <td>
                <P><strong>Notes</strong></p>
                <p>
                    <%=invoice_data.notes%>
                </p>
            </td>
        </tr>
        <br>
    </table>
</body>

</html>