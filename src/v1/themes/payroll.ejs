<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logo and Heading</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @media print {
            .page-break {
                page-break-inside: avoid;
                /* margin-top: 50px; */
            }
            @page {
                size: A4;
                margin: 50px; /* Adjust the top and bottom margin as needed */
            }
           
        }   
        .lable-names {
            font-size: 20px;
            font-family: Arial, sans-serif;
            font-weight: 550;
        }
        .values {
            font-size: 20px;
            font-family: Arial, sans-serif;
            font-weight: 500;
        }
        .card-labels {
            font-size: 14px;
            font-family: Arial, sans-serif;
            color: #636666;
        }
        .cards {
            background-color: #E0E3E3;
            border-radius: 10px;
            height: 100px;
        }
        table {
            border: 4px solid #B8BBBB; 
            width: 100%;
            border-radius: 3px;
        }
        th, td, tr {
            border: 5px solid #B8BBBB; 
        }
        .comments {
            border: 3px solid #B8BBBB; 
            width: 100%; 
            border-radius: 4px; 
        }
        .textarea1 {
            width: 100%; 
            border: none;   
            outline: none;
        }
        .salry-amount {
            color: #077A41;
            font-family: Arial, sans-serif;
            font-weight: bold;
            font-size: 26px;
        }
        .logo-image {
            width: 250px;
            height: 75px;
        }
        .container {
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="container ">
        <div class="mb-4">
            <img class="logo-image" src="https://res.cloudinary.com/dojug66fj/image/upload/v1709036091/blue_logo_dw8lcd.png" alt="logo">
        </div>
        <div class="container-fuid">
            <div class="row">
                <div class="col-12">
                    <div class="mb-2">
                        <h1 class="lable-names">Employee Report - <%=payroll_data.employee_name%> ( <%=payroll_data.period%> )</h1>
                    </div>
                </div>
            </div>
            
            <% payroll_data.placement_information.forEach(function(payroll, index) { %>
                <div class="page-break">
                    <div class="row">
                        <div class="col-12">
                            <div class="mt-4">
                                <h1 class="lable-names">Client - <%= index + 1 %> </h1>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="cards p-3">
                                <h1 class="card-labels">Client Name</h1>
                                <h1 class="values"><%=payroll.client_name%></h1>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="cards p-3">
                                <h1 class="card-labels">Amount</h1>
                                <h1 class="values"><%= payroll_data.currency_symbol%> <%=payroll.amount%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                    <% payroll.payroll_information.forEach(function(payrollInfo) { %>
                    <div class="page-break">
                        <div class="row">
                            <div class="col-12">
                                <div class="mt-4">
                                    <h1 class="lable-names">Payrate Division </h1>
                                </div>
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <thead class="table-header-bg"></thead>
                                <tr>
                                    <th scope="col" class=" text-center th-white">Payrate (<%= payroll_data.currency_symbol%>)</th>
                                    <th scope="col" class="text-center th-white">Hours</th>
                                    <th scope="col" class="text-center th-white">OT Rate (<%= payroll_data.currency_symbol%>)</th>
                                    <th scope="col" class=" text-center th-white">OT Hours</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center"><%= payrollInfo.pay_rate %></td>
                                    <td class="text-center"><%= payrollInfo.hours %></td>
                                    <td class="text-center"><%= payrollInfo.ot_pay_rate %></td>
                                    <td class="text-center"><%= payrollInfo.ot_hours %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                <% }); %>
            <% }); %>
            <div class="page-break">
                <div class="row">
                    <div class="col-12">
                        <div class="mt-4">
                            <h1 class="lable-names">Comments</h1>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-12 my-1">
                        <textarea class = "comments"  rows="4" cols="50"><%= payroll_data.comments %></textarea>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4 page-break">
                <div class="col-6">
                    <div class="cards p-3">
                        <h1 class="card-labels">Visa</h1>
                        <h1 class="values"><%=payroll_data.visa_name%></h1>
                    </div>
                </div>
                <div class="col-6">
                    <div class="cards p-3">
                        <h1 class="card-labels">Balance</h1>
                        <h1 class="values"><%= payroll_data.currency_symbol%> <%=payroll_data.balance_amount%></h1>
                    </div>
                </div>
            </div>
            <div class="row mt-4 page-break">
                <div class="col-6">
                    <div class="cards p-3">
                        <h1 class="card-labels">Expense Deduction</h1>
                        <h1 class="values"><%= payroll_data.currency_symbol%> <%=payroll_data.deduction%></h1>
                    </div>
                </div>
                <div class="col-6">
                    <div class="cards p-3">
                        <h1 class="card-labels">Expense Reimbursement</h1>
                        <h1 class="values"><%= payroll_data.currency_symbol%> <%=payroll_data.reimbursement%></h1>
                    </div>
                </div>
            </div>
            <div class="row mt-4 page-break">
                <div class="col-6">
                    <div class="cards p-3">
                            <h1 class="card-labels">Net Payable Amount</h1>
                            <h1 class="values"><%= payroll_data.currency_symbol%> <%=payroll_data.net_amount%></h1>
                    </div>
                </div>
            </div>
           
            <div class="row page-break">
                <div class="col-12">
                    <div class="mt-4">
                        <h1 class="lable-names">Salary Amount</h1>
                        <h1 class="salry-amount"><%= payroll_data.currency_symbol%> <%= payroll_data.amount_paid%></h1>
                    </div>
                </div>
            </div>
        </div>

        
    </div>
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>